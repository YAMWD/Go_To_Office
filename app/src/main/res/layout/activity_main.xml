<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="411dp"
        android:layout_height="90dp"
        android:background="#293759"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="70dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:srcCompat="@drawable/menu" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/subheader1"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:background="#4DB7B7"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/subheader2"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#4DB7B7"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentTrip" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:height="25dp"
        android:gravity="center"
        android:text="当前行程"
        android:textColor="#F9F5F5"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@+id/subheader1"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:height="25dp"
        android:gravity="center_horizontal"
        android:text="添加一项新行程"
        android:textColor="#F9F5F5"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subheader2" />

    <ImageButton
        android:id="@+id/currentTrip"
        android:layout_width="411dp"
        android:layout_height="207dp"
        android:layout_marginTop="144dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:srcCompat="@drawable/shanghai" />

    <ImageButton
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="112dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:onClick="gotoCreate"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subheader2"
        app:srcCompat="@drawable/create" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="72dp"
        android:layout_height="76dp"
        android:layout_marginStart="336dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/currentTrip"
        app:layout_constraintTop_toBottomOf="@+id/subheader1"
        app:srcCompat="@drawable/more" />
</androidx.constraintlayout.widget.ConstraintLayout>

